<h1 align="center">All Users</h1>
<div align="center">
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<%= link_to avatar_url(user),user_path(user) %> <br>
						<%= link_to user.username, user_path(user) %> <br>
					<small><%= pluralize(user.articles.count, "article") if user.articles %></small>
				</div>
			</div>
		</ul>
	<% end %>
</div>
