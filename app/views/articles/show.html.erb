<div class="container">
	<div class="row">
		<h3>Title: <%= @article.title %></h3>
		<p>
		  <strong>Description:</strong>
		  <%= @article.description %>
		</p>
		<div class="btn-group">
			<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-success" %>
			<%= link_to "Delete", articles_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
			<%= link_to 'Back', articles_path, class: "btn btn-default" %>
		</div>		
	</div>
</div>


