<div class="container well">
	<div class="row">
		<% if @article.user %>
			<ul class="listing">
				<div class="row">
					<div class="well col-md-4 col-md-offset-4 center">
						<%= link_to avatar_url(@article.user),user_path(@article.user) %> <br>
							<%= link_to @article.user.username, user_path(@article.user) %> <br>
						<small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
					</div>
				</div>
			</ul>
		<% end %>
		<h3>Title: <%= @article.title %></h3>
		<p>
		  <strong>Description:</strong>
		  <%= @article.description %>
		</p>
		<% if logged_in? && current_user == @article.user %>
		<div class="btn-group">
			<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-success" %>
			<%= link_to "Delete", articles_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
			<% end %>
			<%= link_to 'Back', articles_path, class: "btn btn-default" %>
		</div>		
	</div>
</div>


